rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin(appId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/artifacts/$(appId)/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/artifacts/$(appId)/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user is admin (requires appId parameter)
    function isAdminInContext(appId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/artifacts/$(appId)/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/artifacts/$(appId)/admins/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user is admin or owner (requires appId parameter)
    function isAdminOrOwner(userId, appId) {
      return isOwner(userId) || isAdminInContext(appId);
    }
    
    // Match the artifacts collection structure
    match /artifacts/{appId} {
      
      // Admins collection
      match /admins/{adminId} {
        // Users can read their own admin status (to check if they are admin)
        // Admins can read all admin records
        allow read: if isAuthenticated() && (isOwner(adminId) || isAdminInContext(appId));
        // Only admins can write (add/update/delete admin status)
        // Note: First admin must be set manually via Firebase Console
        allow write: if isAdminInContext(appId);
      }
      
      // Users subcollection - each user has their own data
      match /users/{userId} {
        // Admins can read all user metadata, regular users can only read their own
        allow read: if isAuthenticated() && (isOwner(userId) || isAdminInContext(appId));
        
        // Users can create/update their own user document, admins can update any
        allow create: if isAuthenticated() && isOwner(userId);
        allow update: if isAuthenticated() && (isOwner(userId) || isAdminInContext(appId));
        
        // Allow admins to delete user documents
        allow delete: if isAdminInContext(appId);
        
        // Assets collection - user's financial assets
        // STRICT PER-USER ISOLATION: Only allow access when userId matches request.auth.uid
        match /assets/{assetId} {
          // Users can ONLY read their own assets (userId must match auth.uid)
          allow read: if isAuthenticated() && request.auth.uid == userId;
          // Users can create/update their own assets only
          allow create, update: if isAuthenticated() && request.auth.uid == userId;
          // Delete requires admin claim OR user is owner (for safety)
          allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdminInContext(appId));
        }
        
        // Portfolios collection - user's portfolio configurations
        // STRICT PER-USER ISOLATION: Only allow access when userId matches request.auth.uid
        match /portfolios/{portfolioId} {
          // Users can ONLY read their own portfolios (userId must match auth.uid)
          allow read: if isAuthenticated() && request.auth.uid == userId;
          // Users can create/update their own portfolios only
          allow create, update: if isAuthenticated() && request.auth.uid == userId;
          // Delete requires admin claim OR user is owner (for safety)
          allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdminInContext(appId));
        }
        
        // Reports collection - AI advisor reports
        // STRICT PER-USER ISOLATION: Only allow access when userId matches request.auth.uid
        match /reports/{reportId} {
          // Users can ONLY read their own reports (userId must match auth.uid)
          allow read: if isAuthenticated() && request.auth.uid == userId;
          // Users can create/update their own reports only
          allow create, update: if isAuthenticated() && request.auth.uid == userId;
          // Delete requires admin claim OR user is owner (for safety)
          allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdminInContext(appId));
        }
        
        // Dashboard widgets collection - chart configurations
        // STRICT PER-USER ISOLATION: Only allow access when userId matches request.auth.uid
        match /dashboard_widgets/{widgetId} {
          // Users can ONLY read their own widgets (userId must match auth.uid)
          allow read: if isAuthenticated() && request.auth.uid == userId;
          // Users can create/update their own widgets only
          allow create, update: if isAuthenticated() && request.auth.uid == userId;
          // Delete requires admin claim OR user is owner (for safety)
          allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdminInContext(appId));
        }
        
        // Also support "widgets" collection alias for backward compatibility
        match /widgets/{widgetId} {
          // Users can ONLY read their own widgets (userId must match auth.uid)
          allow read: if isAuthenticated() && request.auth.uid == userId;
          // Users can create/update their own widgets only
          allow create, update: if isAuthenticated() && request.auth.uid == userId;
          // Delete requires admin claim OR user is owner (for safety)
          allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdminInContext(appId));
        }
        
        // Settings subcollection
        match /settings/{settingId} {
          // Admins can read all, users can only read/write their own
          allow read: if isAdminOrOwner(userId, appId);
          allow write: if isOwner(userId) || isAdminInContext(appId);
        }
        
        // Portfolio snapshots collection - daily portfolio value snapshots
        // STRICT PER-USER ISOLATION: Only allow access when userId matches request.auth.uid
        match /portfolioSnapshots/{snapshotId} {
          // Users can ONLY read their own snapshots (userId must match auth.uid)
          allow read: if isAuthenticated() && request.auth.uid == userId;
          // Users can create/update their own snapshots only (for daily archiving)
          // Note: userId is from the parent path (/users/{userId}/portfolioSnapshots/{snapshotId})
          allow create, update: if isAuthenticated() && request.auth.uid == userId;
          // Delete requires admin claim OR user is owner (for safety)
          allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdminInContext(appId));
        }
        
        // Chats collection - AI chat conversations
        // STRICT PER-USER ISOLATION: Only allow access when userId matches request.auth.uid
        match /chats/{chatId} {
          // Users can ONLY read their own chats (userId must match auth.uid)
          allow read: if isAuthenticated() && request.auth.uid == userId;
          // Users can create/update their own chats only
          allow create, update: if isAuthenticated() && request.auth.uid == userId;
          // Delete requires admin claim OR user is owner (for safety)
          allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdminInContext(appId));
          
          // Messages subcollection within each chat
          match /messages/{messageId} {
            // Users can ONLY read their own messages (userId must match auth.uid)
            allow read: if isAuthenticated() && request.auth.uid == userId;
            // Users can create/update their own messages only
            allow create, update: if isAuthenticated() && request.auth.uid == userId;
            // Delete requires admin claim OR user is owner (for safety)
            allow delete: if isAuthenticated() && (request.auth.uid == userId || isAdminInContext(appId));
          }
        }
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

